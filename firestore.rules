rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read/write their own
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Friendships - complex access control
    match /friendships/{friendshipId} {
      // Allow read if user is part of the friendship
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.user1 || 
         request.auth.uid == resource.data.user2);
      
      // Allow create if user is user1
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user1;
      
      // Allow update if user is part of friendship
      // AND they're not tampering with critical debt fields
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.user1 || 
         request.auth.uid == resource.data.user2) &&
        // Prevent direct manipulation of baseDebt
        request.resource.data.baseDebt == resource.data.baseDebt;
    }
    
    // Check-ins - users can create for their friendships
    match /checkins/{checkinId} {
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         request.auth.uid in get(/databases/$(database)/documents/friendships/$(resource.data.friendshipId)).data.users);
      
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid &&
        // Ensure timestamp is recent (within last minute)
        request.time < request.resource.data.timestamp + duration.value(60, "s") &&
        request.time > request.resource.data.timestamp - duration.value(60, "s");
    }
  }
}
